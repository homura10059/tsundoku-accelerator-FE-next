generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  authorId  String?
  content   String?
  id        String  @id @default(cuid())
  published Boolean @default(false)
  title     String
  author    User?   @relation(fields: [authorId], references: [id])
}

model User {
  id    String  @id @default(cuid())
  name  String  @unique
  posts Post[]
  wishLists WishList[]
}

model WishList {
  id    String  @id @default(cuid())
  url   String
  scrapedAt Int
  userId  String?
  author  User?   @relation(fields: [userId], references: [id])
}